extends layout 

block content 

    h1= title

    form(method='POST')
        div.form-group
            label(for='name') Item:
            input#name.form-control(type='text', placeholder='Item Name' name='name' required value=(undefined===item ? '' : item.name))
        div.form-group
            label(for='amount') Amount: 
            input#amount.form-control(type='number', placeholder='Item Amount' name='amount' required value=(undefined===item ? '' : item.amount))
        div.form-group
            label(for='price') Price: 
            input#price.form-control(type='number', placeholder='Item Price' name='price' value=(undefined===item ? '' : item.price))
        div.form-group
            label Category: 
                for category in categories 
                    div(style='display: inline; padding-right: 10px;')
                        if category.checked 
                            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked)
                            label(for=category._id) &nbsp;#{category.name}
                        else 
                            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id)
                            label(for=category._id) &nbsp;#{category.name}
        div.form-group
            label(for='description') Description: 
            textarea#description.form-control(type='text', placeholder='Add a brief description of this item' name='description' value=(undefined===item ? '' : item.description))
        button.btn.btn-primary(type='submit') Submit

        if errors 
            ul 
                for error in errors 
                    li!= error.msg